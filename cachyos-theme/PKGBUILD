# Maintainer: Hamad Al Marri <hamad@cachyos.org>

pkgname=cachyos-kde-theme
pkgver=1
pkgrel=6
pkgdesc="CachyOS theme for KDE"
arch=(x86_64)
options=('!strip')

depends=(
	'plasma-desktop'
	'plasma5-applets-window-buttons-git'
	'plasma5-applets-window-appmenu-git'
	'terminus-font-ttf'
	)

url="https://cachyos.org/"
source=("git+https://gitea.cachyos.org/CachyOS/cachyos-kde-theme.git")
sha512sums=('SKIP')

package() {
	cd $pkgname
	cp -r ./usr/ ${pkgdir}
	cp -r ./etc/ ${pkgdir}
}
