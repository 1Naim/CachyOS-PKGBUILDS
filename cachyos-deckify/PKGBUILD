pkgname=cachyos-deckify
pkgver=1
pkgrel=5
arch=('any')
license=('GPL-3.0-later')
pkgdesc='CachyOS - Deckify!'
source=(git+https://github.com/CachyOS/CachyOS-Deckify#commit=ed3dbf6b7f772b4c6b269e12b1ed2d256a054025)
install="$pkgname.install"
options=(!strip !debug)
sha256sums=('0af3c24f69306cc35686ae7fbb4da055dfd0dc04f771f64c63cad7e3884f3954')
depends=('gamescope-plus' 'mangohud' 'cachyos-gaming-meta' 'gamescope-session-steam-git' 'gamescope-session-git' 'chimeraos-device-quirks-git'
         'inputplumber' 'asusctl' 'scx-scheds' 'qt5-tools')

package() {
  install -d "$pkgdir/etc"
  cp -rf "${srcdir}/CachyOS-Deckify/etc" "$pkgdir"
  install -d "$pkgdir/usr"
  cp -rf "${srcdir}/CachyOS-Deckify/usr" "$pkgdir"
}
