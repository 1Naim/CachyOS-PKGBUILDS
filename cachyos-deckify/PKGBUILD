pkgname=cachyos-deckify
pkgver=1
pkgrel=7
arch=('any')
license=('GPL-3.0-later')
pkgdesc='CachyOS - Deckify!'
source=(git+https://github.com/CachyOS/CachyOS-Deckify#commit=af5a864de4898a5ad7b2b6ef19718534904f76d8)
install="$pkgname.install"
options=(!strip !debug)
sha256sums=('f8761900eaaa7f98aedde1f099925ee76ea496a2507dd2619d2411014abe2f7f')
depends=('gamescope-session-git' 'mangohud' 'cachyos-gaming-meta' 'jq' 'dmidecode' 'glew' 'glfw' 'glxinfo' 'curl' 'tar'
         'scx-scheds' 'qt5-tools' 'hhd' 'hhd-ui' 'adjustor' 'gamescope-session-steam-git')

package() {
  install -d "$pkgdir/etc"
  cp -rf "${srcdir}/CachyOS-Deckify/etc" "$pkgdir"
  install -d "$pkgdir/usr"
  cp -rf "${srcdir}/CachyOS-Deckify/usr" "$pkgdir"
}
