pkgname=cachyos-deckify
pkgver=1
pkgrel=4
arch=('any')
license=('GPL-3.0-later')
pkgdesc='CachyOS - Deckify!'
source=(git+https://github.com/CachyOS/CachyOS-Deckify#commit=d30a4f84d952e19b5ac767de1b04dbdd459bb51c)
install="$pkgname.install"
sha256sums=('ffe7165c05906eec7e51d34000fe0b51ff342afe0640476aec5327cf622108a3')
depends=('gamescope-plus' 'mangohud' 'cachyos-gaming-meta' 'gamescope-session-steam-git' 'chimeraos-device-quirks-git'
         'inputplumber' 'asusctl' 'scx-scheds' 'qt5-tools')

package() {
  install -d "$pkgdir/etc"
  cp -rf "${srcdir}/CachyOS-Deckify/etc" "$pkgdir"
  install -d "$pkgdir/usr"
  cp -rf "${srcdir}/CachyOS-Deckify/usr" "$pkgdir"
}
