# Maintainer: Vladislav Nepogodin <nepogodin.vlad@gmail.com>

pkgname=cachyos-calamares-refind-config
pkgver=1
pkgrel=1
pkgdesc="CachyOS config for the Calamares installer"
arch=(any)
url="https://github.com/cachyos/calamares-config"
license=('GPL')
makedepends=('git')
provides=("$pkgname=$pkgver")
conflicts=("$pkgname")
source=("${pkgname}::git+$url.git#branch=refind")
sha512sums=('SKIP')

package() {
  local _destdir=etc/calamares

  install -dm755 $pkgdir/$_destdir
  install -dm755 $pkgdir/usr/lib/calamares/modules/pacstrap
  install -dm755 $pkgdir/usr/lib/calamares/modules/refind
  cp -rf $srcdir/$pkgname/etc $pkgdir
  cp -rf $srcdir/$pkgname/usr/lib/calamares/modules/pacstrap/* $pkgdir/usr/lib/calamares/modules/pacstrap
  cp -rf $srcdir/$pkgname/usr/lib/calamares/modules/refind/* $pkgdir/usr/lib/calamares/modules/refind
}
