#!/bin/bash

function rateArch() {
    sudo rate-mirrors --allow-root --concurrency=40 --save=/etc/pacman.d/mirrorlist arch
}

function rateCachyOS() {
    sudo rate-mirrors --allow-root --concurrency=40 --save=/etc/pacman.d/cachyos-mirrorlist cachyos
}

function rateCachyOSV3() {
    sudo rate-mirrors --allow-root --concurrency=40 --save=/etc/pacman.d/cachyos-v3-mirrorlist cachyos --arch=x86_64_v3
}

rateArch
rateCachyOS
rateCachyOSV3
