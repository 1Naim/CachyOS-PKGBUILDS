# Maintainer: Michael Bolden <me@sm9.dev>

pkgname=cachyos-rate-mirrors
pkgver=1
pkgrel=2
groups=(cachyos)
arch=('any')
url="https://github.com/CachyOS"
license=('GPL')
pkgdesc='CachyOS - Rate mirrors service'
install=$pkgname.install
depends=(rate-mirrors)
source=(
  $pkgname
  $pkgname.service
  $pkgname.timer
  $pkgname.hook
)


package() {
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 "$pkgname.service" "$pkgdir/usr/lib/systemd/system/$pkgname.service"
  install -Dm644 "$pkgname.timer" "$pkgdir/usr/lib/systemd/system/$pkgname.timer"
  install -Dm644 "$pkgname.hook" "$pkgdir/usr/share/libalpm/hooks/$pkgname.hook"
}


md5sums=('e386bfa7f8401b743b35c59e7d636b08'
         'ceef323e04228a2979f19e52b81d2813'
         'b194dc62ee5106508efc09ab3b038982'
         'cad6941c10ff483add89264c46008064')
