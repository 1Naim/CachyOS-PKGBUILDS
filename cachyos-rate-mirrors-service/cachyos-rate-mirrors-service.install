post_install() {
  systemctl enable cachyos-rate-mirrors.timer
  systemctl is-active reflector.timer >/dev/null && systemctl disable reflector.timer
}

post_upgrade() {
  systemctl is-active cachyos-rate-mirrors.timer >/dev/null || systemctl enable cachyos-rate-mirrors.timer
  systemctl is-active reflector.timer >/dev/null && systemctl disable reflector.timer
}
