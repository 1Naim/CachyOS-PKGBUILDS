# Maintainer: Michael Bolden <mesm9.dev>

pkgname=cachyos-rate-mirrors-service
pkgver=1
pkgrel=1
groups=(cachyos)
arch=('any')
license=('GPL')
pkgdesc='CachyOS - Rate mirrors service'
source=("git+https://github.com/CachyOS/$pkgname")
install=$pkgname.install
sha256sums=('SKIP')
depends=(
    'rate-mirrors'
    )
package() {
  cd "$srcdir"
  install -Dm644 "$pkgname/cachyos-rate-mirrors.service" "$pkgdir/usr/lib/systemd/system/cachyos-rate-mirrors.service"
  install -Dm644 "$pkgname/cachyos-rate-mirrors.timer" "$pkgdir/usr/lib/systemd/system/cachyos-rate-mirrors.timer"
  install -Dm644 "$pkgname/cachyos-rate-mirrors.hook" "$pkgdir/usr/share/libalpm/hooks/cachyos-rate-mirrors.hook"
}
