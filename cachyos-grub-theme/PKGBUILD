# Maintainer: ptr1337 <admin@ptr1337.dev>

pkgname=cachyos-grub-theme
pkgver=1
pkgrel=1
pkgdesc="CachyOS - GRUB-THEME"
arch=('any')
license=('GPL')
depends=(grub)
optdepends=()
install="$pkgname.install"
url="https://gitea.cachyos.org/CachyOS/cachyos-grub-theme"
source=('git+https://gitea.cachyos.org/CachyOS/cachyos-grub-theme.git')
makedepends=('git')
sha256sums=('SKIP')
conflicts=("$pkgname")
provides=("$pkgname=$pkgver")

package() {
  mkdir -p "${pkgdir}/boot/grub/themes/${pkgname}"
  cp -TR "${srcdir}/${pkgname}/theme" "${pkgdir}/boot/grub/themes/${pkgname}"
}
