# Maintainer: Vladislav Nepogodin <nepogodin.vlad@gmail.com>

pkgname=cachyos-wallpapers
pkgdesc='Wallpapers for CachyOS'
pkgver=r4.c42ac4e
pkgrel=1
arch=('any')
url="https://github.com/cachyos/$pkgname"
license=('GPL')
makedepends=('git')
source=("git+$url.git")
sha512sums=('SKIP')

pkgver() {
   cd "$pkgname"
   printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
   cd "$pkgname"
   install -Dm644 wallpapers/* -t "$pkgdir/usr/share/wallpapers/$pkgname/"
}
