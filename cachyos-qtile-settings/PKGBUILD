pkgname=cachyos-qtile-settings
pkgdesc='CachyOS Qtile settings'
pkgver=1.8
pkgrel=11
arch=('any')
url="https://github.com/cachyos/$pkgname"
license=('GPL')
makedepends=('coreutils')
_commit="7bb50c5ef8960d341eb507464da969bdef1f2dbd"
source=("git+https://github.com/CachyOS/$pkgname.git#commit=${_commit}")
sha512sums=('24a3b22b280815643221c29dafb37d7070f1e62f9c5f5905a9b349ac1517bd290f1af8b94fff2c9e99eb36d15b95b5723206a0133c75d8bd22197a534cfa599a')
depends=('picom'
         'wired'
         'rofi'
         'thunar'
         'alacritty'
         'python-psutil'
         'python-setuptools'
         'polkit-gnome'
         'gnome-keyring'
         'feh'
         'qt5ct'
         'noto-fonts'
         'ttf-fira-sans'
         'ttf-font-awesome'
         'ttf-ibm-plex'
         'char-white'
         'capitaine-cursors'
         'flameshot'
         'gnome-themes-extra'
         'cachyos-wallpapers'
         'gtk-engines'
         'gtk-engine-murrine'
         'thunar-archive-plugin'
         'file-roller'
         'p7zip'
         'python-pulsectl-asyncio'
         'playerctl'
         'network-manager-applet')
install=$pkgname.install
provides=('cachyos-desktop-settings')
conflicts=('cachyos-desktop-settings')

package() {
    install -d "$pkgdir/etc"
    cp -rf "$srcdir/$pkgname/etc" "$pkgdir"
    install -d "$pkgdir/usr/share/icons"
    cp -rf "$srcdir/$pkgname/usr/share/icons" "$pkgdir/usr/share"
    install -d "$pkgdir/usr/share/themes"
    cp -rf "$srcdir/$pkgname/usr/share/themes" "$pkgdir/usr/share"
}
