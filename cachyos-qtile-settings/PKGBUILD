pkgname=cachyos-qtile-settings
pkgdesc='CachyOS Qtile settings'
pkgver=1.0
pkgrel=1
arch=('any')
url="https://github.com/cachyos/$pkgname"
license=('GPL')
makedepends=('coreutils')
_commit="71c185a2ea278a3aa93cb6aac9e36f09077d1c0e"
source=("git+https://github.com/CachyOS/$pkgname.git#commit=${_commit}")
sha512sums=('SKIP')
depends=('picom'
         'wired'
         'rofi'
         'thunar'
         'alacritty'
         'python-psutil'
         'python-setuptools'
         'polkit-gnome'
         'feh'
         'qt5ct'
         'noto-fonts'
         'ttf-fira-sans'
         'ttf-font-awesome'
         'ttf-ibm-plex'
         'char-white'
         'capitaine-cursors'
         'flameshot'
         'gnome-themes-extra'
         'cachyos-wallpapers') 
install=$pkgname.install
provides=('cachyos-desktop-settings')
conflicts=('cachyos-desktop-settings')

package() {
    install -d $pkgdir/etc
    cp -rf $srcdir/$pkgname/etc $pkgdir
#    install -d $pkgdir/usr
#    cp -rf $srcdir/$pkgname/usr $pkgdir
}
