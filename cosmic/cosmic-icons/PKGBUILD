# Maintainer: Mark Wagie <mark dot wagie at proton dot me>
pkgname=cosmic-icons
pkgver=1.0.0.alpha.1
pkgrel=1
pkgdesc="System76 Cosmic icon theme"
arch=('any')
url="https://github.com/pop-os/cosmic-icons"
license=('CC-BY-SA-4.0 AND GPL-3.0-or-later')
depends=('pop-icon-theme')
makedepends=('git' 'just')
options=('!strip')
source=('git+https://github.com/pop-os/cosmic-icons.git#tag=epoch-1.0.0-alpha.1')

sha256sums=('ba54efa3dfc5f00183bb9d0fe76cf0b11a2d9338567e35d43004331ceba4d46e')

package() {
  cd "${pkgname}"
  just rootdir="$pkgdir" install

  install -Dm644 COPYING LICENSE -t "$pkgdir/usr/share/licenses/${pkgname}/"
}
