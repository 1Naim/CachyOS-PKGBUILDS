
pkgname=keyring-cachyos
pkgver=1
pkgrel=7
pkgdesc="CachyOS keyring"
arch=('x86_64')
license=('GPL3')
install=${pkgname}.install

source=(
  "cachyos.gpg"
)

sha512sums=('c6f28df2d9158669861a8b9f132978a51da88a13c4797cf677435b3741083611d6d058186f8cd137e2d88edcd147d63d55ce47fa2d7c678ef5bc4d68ca330a54')

package() {
    local destdir=usr/share/pacman/keyrings

    install -d $pkgdir/$destdir
    install -Dm644 cachyos.gpg $pkgdir/$destdir/cachyos.gpg
}

