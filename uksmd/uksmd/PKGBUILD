pkgname=uksmd
pkgver=1.2.7
pkgrel=1
epoch=1
pkgdesc="Userspace KSM helper daemon"
url="https://github.com/CachyOS/uksmd"
license=('GPL3')
arch=('x86_64')
depends=('libcap-ng' 'libprocps')
makedepends=('meson')
conflicts=('uksmd-git' 'uksmd-lts')
provides=("uksmd=${pkgver}")
source=("$url/archive/v$pkgver.tar.gz")
sha256sums=('44fbfa6b9c7f395c986f52cf5dea9e282aa3ad647c1075afd5ede8d9f602591d')

prepare() {
 cd $pkgname-$pkgver

 local src
  for src in "${source[@]}"; do
    src="${src%%::*}"
    src="${src##*/}"
    [[ $src = *.patch ]] || continue
    echo "Applying patch $src..."
    patch -Np1 < "../$src"
  done
}

build() {
  cd $pkgname-$pkgver
  arch-meson . build
  meson compile -C build
}

package() {
  depends+=(UKSMD-BUILTIN)

  cd $pkgname-$pkgver
  meson install -C build --destdir "${pkgdir}"
}
