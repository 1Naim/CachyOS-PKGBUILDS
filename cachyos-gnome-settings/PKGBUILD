sha512sums=('9cbbd4648da0a6aa1c177bf18a658a0d2cf72fab9702a1d3c72a35d2bc9afb1cd7dab8be65cabe5e39302cdda11f1cd955c357f990caa789622fb75ab6e3aa61')
