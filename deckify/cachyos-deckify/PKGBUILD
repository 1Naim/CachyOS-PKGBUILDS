pkgname=cachyos-deckify
pkgver=1
pkgrel=12
arch=('any')
license=('GPL-3.0-later')
pkgdesc='CachyOS - Deckify!'
source=(git+https://github.com/CachyOS/CachyOS-Deckify#commit=25f03b78b7ca9be1e9578e6eee6ebfd50237b13e)
install="$pkgname.install"
options=(!strip !debug)
sha256sums=('d152396ee4ff80ab9aa41ca7d53f30b91ab199fa066fdeb2d4d0ca8938ac5b44')
depends=('gamescope-session-git' 'mangohud' 'cachyos-gaming-meta' 'jq' 'dmidecode' 'glew' 'glfw' 'glxinfo' 'curl' 'tar'
         'scx-scheds' 'qt5-tools' 'hhd' 'hhd-ui' 'adjustor' 'gamescope-session-steam-git' 'jupiter-hw-support' 'jupiter-fw-control')

package() {
  install -d "$pkgdir/etc"
  cp -rf "${srcdir}/CachyOS-Deckify/etc" "$pkgdir"
  install -d "$pkgdir/usr"
  cp -rf "${srcdir}/CachyOS-Deckify/usr" "$pkgdir"
}
