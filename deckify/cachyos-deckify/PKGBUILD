pkgname=cachyos-deckify
pkgver=1
pkgrel=18
arch=('any')
license=('GPL-3.0-later')
pkgdesc='CachyOS - Deckify!'
source=(git+https://github.com/CachyOS/CachyOS-Deckify#commit=c7408ba29f43fb72ac1685adb875160aaf7648ee)
install="$pkgname.install"
options=(!strip !debug)
sha256sums=('7d61f0264e3837a193fa1c29576cbaa9a6efadfc972ed78990442e39953466c0')
depends=('gamescope-session-git' 'mangohud' 'cachyos-gaming-meta' 'jq' 'dmidecode' 'glew' 'glfw' 'glxinfo' 'curl' 'tar'
         'scx-scheds' 'qt5-tools' 'hhd' 'hhd-ui' 'adjustor' 'gamescope-session-steam-git' 'jupiter-hw-support' 'jupiter-fan-control' 'gamescope-plus')

package() {
  install -d "$pkgdir/etc"
  cp -rf "${srcdir}/CachyOS-Deckify/etc" "$pkgdir"
  install -d "$pkgdir/usr"
  cp -rf "${srcdir}/CachyOS-Deckify/usr" "$pkgdir"
}
