# Maintainer: Vladislav Nepogodin <nepogodin.vlad@gmail.com>

pkgname=cachyos-kde-settings-dev
pkgdesc='CachyOS KDE settings'
pkgver=2.0
pkgrel=2
arch=('any')
url="https://github.com/cachyos/$pkgname"
license=('GPL')
makedepends=('coreutils')
source=("git+https://github.com/CachyOS/cachyos-kde-settings.git#branch=rework")
sha512sums=('SKIP')
depends=('cachyos-zsh-config'
         'cachyos-fish-config'
         'qt5ct'
         'ttf-fantasque-nerd'
         'noto-fonts'
         'ttf-fira-sans'
         'plasma5-applets-eventcalendar'
         'plasma5-applets-netspeed'
         'plasma5-applets-window-appmenu'
         'plasma5-applets-window-buttons'
         'plasma5-applets-window-title'
         'ksysguard'
         'char-white'
         'capitaine-cursors'
         'cachyos-nord-kde-theme-git'
         'cachyos-wallpapers'
         'cachyos-nord-gtk-theme-git')
install=$pkgname.install
provides=('cachyos-desktop-settings')
conflicts=('cachyos-desktop-settings')

package() {
    install -d $pkgdir/etc
    cp -rf $srcdir/$pkgname/etc $pkgdir
    install -d $pkgdir/usr
    cp -rf $srcdir/$pkgname/usr $pkgdir
}
