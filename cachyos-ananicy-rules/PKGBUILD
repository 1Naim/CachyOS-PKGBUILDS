# Maintainer: Piotr Gorski <piotrgorski@cachyos.org>

pkgname=cachyos-ananicy-rules
_gitname=ananicy-rules
pkgver=1.r368.26a59c5
pkgrel=1
groups=(cachyos)
arch=('any')
license=(GPL-1.0-only)
pkgdesc='CachyOS - ananicy-rules'
source=("${pkgname}::git+https://github.com/CachyOS/${_gitname}.git#commit=26a59c5fbd1c25a3fea399dd0fd1bd7db661c206")
sha256sums=('1ea6544081a1119e046070f8baa096cc6e2244fe14fc5a1ad09232221333563e')
replaces=(ananicy-rules-git)
provides=(ananicy-rules-git)
conflicts=(ananicy-rules-git)

pkgver() {
  cd "${srcdir}/${pkgname}"
  _gittag="1"
  printf "${_gittag}.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}
prepare() {
  cd "${pkgname}"
  rm -f README.md
}
package() {
  cd "${pkgname}"
  install -d $pkgdir/etc/ananicy.d
  cp -rf $srcdir/$pkgname/* $pkgdir/etc/ananicy.d
}
