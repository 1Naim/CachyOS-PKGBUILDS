
pkgname=keyring-cachyos
pkgver=1
pkgrel=13
pkgdesc="CachyOS keyring"
arch=(any)
license=('GPL3')
install=${pkgname}.install

source=(
  "keyring-cachyos.gpg")

sha512sums=('234c93195fb231fed278144e32cdf57d5a5497b6ff4d293c0811cad1c4caa68a3232228a16fe18311c22aa923e0557b112e7d892c6a455400c91bfcd87efd85f')

package() {
    local destdir=usr/share/pacman/keyrings

    install -d $pkgdir/$destdir
    install -Dm644 keyring-cachyos.gpg  $pkgdir/$destdir/keyring-cachyos.gpg
}
