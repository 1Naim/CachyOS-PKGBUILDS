
pkgname=keyring-cachyos
pkgver=1
pkgrel=5
pkgdesc="CachyOS keyring"
arch=('x86_64')
license=('GPL3')
install=${pkgname}.install

source=(
  "cachyos.gpg"
)

sha512sums=('e5976becfa2061a866334817e5ec9920e02578b7826609120684abea50223292ba3125720c3dd291e4c0cf3b5ea8de163bac19d0c2d25ac239c385f0a7edc40a')

package() {
    local destdir=usr/share/pacman/keyrings

    install -d $pkgdir/$destdir
    install -Dm644 cachyos.gpg $pkgdir/$destdir/cachyos.gpg
}

