
pkgname=keyring-cachyos
pkgver=1
pkgrel=1
pkgdesc="CachyOS keyring"
arch=('x86_64')
license=('GPL3')
install=${pkgname}.install

source=(
  "ptr1337.gpg"
)

sha512sums=('35568666608b38512e6aa163506d22e3ded7528889caed4012709224ea0c205c8df1491b35c9226445cf09ef334ae3b33d5c04575484c1c69ad7da837e04537b')

package() {
    local destdir=usr/share/pacman/keyrings

    install -d $pkgdir/$destdir
    install -Dm644 ptr1337.gpg $pkgdir/$destdir/ptr1337.gpg
}

