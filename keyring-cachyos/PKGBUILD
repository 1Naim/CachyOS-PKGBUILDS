
pkgname=keyring-cachyos
pkgver=1
pkgrel=12
pkgdesc="CachyOS keyring"
arch=(any)
license=('GPL3')
install=${pkgname}.install

source=(
  "keyring-cachyos.gpg")

sha512sums=('26537b9307e9ef24e61fbca1b1e60c1d343a7f2effc2456b140738d983e9545f5d96679df16e23137f77528812cdc3c952b20f1b3020675d859f6300f4ea6218')

package() {
    local destdir=usr/share/pacman/keyrings

    install -d $pkgdir/$destdir
    install -Dm644 keyring-cachyos.gpg  $pkgdir/$destdir/keyring-cachyos.gpg
}
