
pkgname=keyring-cachyos
pkgver=1
pkgrel=2
pkgdesc="CachyOS keyring"
arch=('x86_64')
license=('GPL3')
install=${pkgname}.install

source=(
  "cachyos.gpg"
)

sha512sums=('c8623ca96d2766ac9d752952f89f9f83c3869cea6388d05a6ba9b023136e43239f0fc57bcfc537a0601ef862a0e517d1bb38176644a86d767db171affd66e89b')

package() {
    local destdir=usr/share/pacman/keyrings

    install -d $pkgdir/$destdir
    install -Dm644 cachyos.gpg $pkgdir/$destdir/cachyos.gpg
}

