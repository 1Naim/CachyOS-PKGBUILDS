
pkgname=keyring-cachyos
pkgver=1
pkgrel=15
pkgdesc="CachyOS keyring"
arch=(any)
license=('GPL3')
install=${pkgname}.install

source=("keyring-cachyos.gpg")

sha512sums=('6b6d906ab1cf7533688e9a3693c610672438bfcbb40e1ce2db7f9282b8c8df253222c0b0db56353ee538c18b72aa6fce15e1a8390ee8701c8773d6bed89db06a')

package() {
    local destdir=usr/share/pacman/keyrings

    install -d $pkgdir/$destdir
    install -Dm644 keyring-cachyos.gpg  $pkgdir/$destdir/keyring-cachyos.gpg
}
