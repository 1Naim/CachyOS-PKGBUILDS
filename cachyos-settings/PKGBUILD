# Maintainer: Peter Jung <admin@ptr1337.dev>

_gitname=CachyOS-Settings
pkgname=cachyos-settings
pkgver=43
pkgrel=1
groups=(cachyos)
arch=('any')
license=('GPL')
makedepends=('coreutils')
pkgdesc='CachyOS - Settings'
source=("git+https://github.com/CachyOS/$_gitname#commit=7fd11c264c20d97f93218cd67f86ac89737a6aad")
install="$pkgname.install"
sha256sums=('1b1954dee6da6f1f8314cf90c92de424ec041cda4452975f5843a298d69c8a59')
depends=(
    'zram-generator'
    'ananicy-cpp'
    'cachyos-ananicy-rules'
    'uksmd'
    'inxi'
)
optdepends=('ruby: for tunecfs2'
            'libluv: for topmem'
            'lua-luv: for topmem'
            'irqbalance')

package() {
  install -d "$pkgdir/etc"
  cp -rf "${srcdir}/${_gitname}/etc" "$pkgdir"
  install -d "$pkgdir/usr"
  cp -rf "${srcdir}/${_gitname}/usr" "$pkgdir"
}
