# Maintainer: Peter Jung <admin@ptr1337.dev>

pkgname=cachyos-settings
pkgver=2
pkgrel=1
arch=('any')
license=('GPL')
makedepends=('coreutils')
pkgdesc='CachyOS - Settings'
source=("git+https://github.com/CachyOS/CachyOS-Settings")
install=$pkgname.install
sha256sums=('SKIP')
depends=(
    'irqbalance'
    'reflector'
    'haveged'
    'profile-sync-daemon'
    'zramd'
    )
package() {
  install -d $pkgdir/etc
  cp -rf $srcdir/$pkgname/etc $pkgdir
  install -d $pkgdir/usr
  cp -rf $srcdir/$pkgname/usr $pkgdir
}
