# Maintainer: Peter Jung <admin@ptr1337.dev>

_gitname=CachyOS-Settings
pkgname=cachyos-settings
pkgver=39
pkgrel=2
groups=(cachyos)
arch=('any')
license=('GPL')
makedepends=('coreutils')
pkgdesc='CachyOS - Settings'
source=("git+https://github.com/CachyOS/$_gitname#commit=ff2e3995044eb0e3ead7572cd8b96a20d8badb13")
install="$pkgname.install"
sha256sums=('d1682f7017219efb3eb3f39d397cab2262cf78d52a568405011863800d91bc2b')
depends=(
    'zram-generator'
    'ananicy-cpp'
    'cachyos-ananicy-rules'
    'uksmd'
    'bpftune-git'
    'inxi'
)
optdepends=('ruby: for tunecfs2'
            'libluv: for topmem'
            'lua-luv: for topmem'
            'irqbalance')

package() {
  install -d "$pkgdir/etc"
  cp -rf "${srcdir}/${_gitname}/etc" "$pkgdir"
  install -d "$pkgdir/usr"
  cp -rf "${srcdir}/${_gitname}/usr" "$pkgdir"
}
