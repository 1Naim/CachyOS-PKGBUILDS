# Maintainer: Peter Jung <admin@ptr1337.dev>

_gitname=CachyOS-Settings
pkgname=cachyos-settings
pkgver=40
pkgrel=1
groups=(cachyos)
arch=('any')
license=('GPL')
makedepends=('coreutils')
pkgdesc='CachyOS - Settings'
source=("git+https://github.com/CachyOS/$_gitname#commit=5cbbc2d3537326ceb9147415496c5bb0a3680fc8")
install="$pkgname.install"
sha256sums=('23cc99586ab4e7313618348e0888feaa64aa0e818f653903aa8adecf6ccfb32d')
depends=(
    'zram-generator'
    'ananicy-cpp'
    'cachyos-ananicy-rules'
    'uksmd'
    'bpftune-git'
    'inxi'
)
optdepends=('ruby: for tunecfs2'
            'libluv: for topmem'
            'lua-luv: for topmem'
            'irqbalance')

package() {
  install -d "$pkgdir/etc"
  cp -rf "${srcdir}/${_gitname}/etc" "$pkgdir"
  install -d "$pkgdir/usr"
  cp -rf "${srcdir}/${_gitname}/usr" "$pkgdir"
}
