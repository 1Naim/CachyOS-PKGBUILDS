# Maintainer: Peter Jung <admin@ptr1337.dev>

pkgname=cachyos-settings
pkgver=1
pkgrel=10
arch=('any')
license=('GPL')
makedepends=('coreutils')
pkgdesc='CachyOS - Settings'
source=("git+https://gitlab.com/cachyos/cachyos-settings.git")
install=$pkgname.install
sha256sums=('SKIP')
depends=(
    'irqbalance'
    'reflector'
    'haveged'
    'profile-sync-daemon'
    'zramd'
    'ananicy-cpp'
    'ananicy-rules-git'
    )
package() {
  install -d $pkgdir/etc
  cp -rf $srcdir/$_pkgname/etc $pkgdir
  install -d $pkgdir/usr
  cp -rf $srcdir/$_pkgname/usr $pkgdir
}
