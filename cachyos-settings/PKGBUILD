# Maintainer: Peter Jung <admin@ptr1337.dev>

pkgname=cachyos-settings
pkgver=1
pkgrel=6
arch=('any')
license=('GPL')
makedepends=('coreutils')
pkgdesc='CachyOS - Settings'
source=("git+https://gitea.cachyos.org/CachyOS/cachyos-settings.git")
install=$pkgname.install
sha256sums=('SKIP')
depends=(
    'irqbalance'
    'reflector'
    'haveged'
    'profile-sync-daemon'
    'zramd'
    'nohang-git'
    'ananicy-cpp'
    )
package() {
    install -d $pkgdir/$pkgname/etc
    install -d $pkgdir/$pkgname/usr

    cp -rf $pkgname/etc $pkgdir
    cp -rf $pkgname/usr $pkgdir

}
