# Maintainer: Peter Jung <admin@ptr1337.dev>

_gitname=CachyOS-Settings
pkgname=cachyos-settings
pkgver=41
pkgrel=2
groups=(cachyos)
arch=('any')
license=('GPL')
makedepends=('coreutils')
pkgdesc='CachyOS - Settings'
source=("git+https://github.com/CachyOS/$_gitname#commit=c350896f1c1098e9fb9a9bf201ecb11666facc97")
install="$pkgname.install"
sha256sums=('97e4ef94b0f03ac32a8b5b609f54e43f2761d0cd1b0a5a24ceec8179dea48409')
depends=(
    'zram-generator'
    'ananicy-cpp'
    'cachyos-ananicy-rules'
    'uksmd'
    'inxi'
)
optdepends=('ruby: for tunecfs2'
            'libluv: for topmem'
            'lua-luv: for topmem'
            'irqbalance')

package() {
  install -d "$pkgdir/etc"
  cp -rf "${srcdir}/${_gitname}/etc" "$pkgdir"
  install -d "$pkgdir/usr"
  cp -rf "${srcdir}/${_gitname}/usr" "$pkgdir"
}
